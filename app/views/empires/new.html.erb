<div class="max-w-md mx-auto">
  <div class="bg-slate-800 rounded-lg shadow-lg overflow-hidden border border-slate-700">
    <div class="px-6 py-4 border-b border-slate-700">
      <h2 class="text-xl font-bold text-slate-100">Create Your Empire</h2>
    </div>
    
    <div class="p-6">
      <%= form_with(model: @empire, local: true) do |f| %>
        <% if @empire.errors.any? %>
          <div class="bg-rose-900/50 text-rose-200 p-4 rounded-md mb-6 border border-rose-800">
            <h4 class="font-medium mb-2">The following errors prevented creating your empire:</h4>
            <ul class="list-disc list-inside text-sm">
              <% @empire.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="mb-6">
          <%= f.label :name, "Empire Name", class: "block text-sm font-medium text-slate-300 mb-1" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-slate-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent", placeholder: "Enter your empire name" %>
        </div>
      
        <div class="bg-slate-700/50 p-4 rounded-md mb-6 border border-slate-600">
          <h3 class="text-md font-semibold text-slate-100 mb-3">New Empire Resources:</h3>
          <ul class="space-y-2 text-sm">
            <li class="flex justify-between">
              <span class="text-slate-300">Credits:</span>
              <span class="font-medium text-green-400">1000</span>
            </li>
            <li class="flex justify-between">
              <span class="text-slate-300">Minerals:</span>
              <span class="font-medium text-indigo-400">500</span>
            </li>
            <li class="flex justify-between">
              <span class="text-slate-300">Energy:</span>
              <span class="font-medium text-yellow-400">200</span>
            </li>
            <li class="flex justify-between">
              <span class="text-slate-300">Food:</span>
              <span class="font-medium text-emerald-400">300</span>
            </li>
            <li class="flex justify-between">
              <span class="text-slate-300">Population:</span>
              <span class="font-medium text-cyan-400">100</span>
            </li>
          </ul>
        </div>
      
        <%= f.submit "Create Empire", class: "w-full btn-primary py-2" %>
      <% end %>
    </div>
  </div>
</div>
