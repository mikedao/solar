<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <h3><%= @empire.name %></h3>
        </div>
        <div class="card-body">
          <p><strong>Ruler:</strong> <%= @empire.user.username %></p>
          <p class="card-text">Your galactic journey begins here. Expand your empire through exploration, resource management, and strategic decisions.</p>
          <%= link_to "Edit Empire", edit_empire_path(@empire), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h4>Resources</h4>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Credits
              <span class="badge bg-primary rounded-pill"><%= @empire.credits %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Minerals
              <span class="badge bg-success rounded-pill"><%= @empire.minerals %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Energy
              <span class="badge bg-warning rounded-pill"><%= @empire.energy %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Food
              <span class="badge bg-info rounded-pill"><%= @empire.food %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              Population
              <span class="badge bg-secondary rounded-pill"><%= @empire.population %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
