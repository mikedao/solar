<div class="max-w-md mx-auto">
  <div class="bg-slate-800 rounded-lg shadow-lg overflow-hidden border border-slate-700">
    <div class="px-6 py-4 border-b border-slate-700">
      <h2 class="text-xl font-bold text-slate-100">Edit Your Empire</h2>
    </div>
    
    <div class="p-6">
      <%= form_with(model: @empire, local: true) do |f| %>
        <% if @empire.errors.any? %>
          <div class="bg-rose-900/50 text-rose-200 p-4 rounded-md mb-6 border border-rose-800">
            <h4 class="font-medium mb-2">The following errors prevented updating your empire:</h4>
            <ul class="list-disc list-inside text-sm">
              <% @empire.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="mb-6">
          <%= f.label :name, "Empire Name", class: "block text-sm font-medium text-slate-300 mb-1" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-slate-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
        </div>
      
        <div class="flex space-x-4">
          <%= f.submit "Update Empire", class: "flex-1 btn-primary py-2" %>
          <%= link_to "Cancel", empire_path(@empire), class: "flex-1 py-2 px-4 bg-slate-700 hover:bg-slate-600 text-slate-300 rounded-md font-medium text-center transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
