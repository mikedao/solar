<div class="max-w-md mx-auto">
  <div class="bg-slate-800 rounded-lg shadow-lg overflow-hidden border border-slate-700">
    <div class="px-6 py-4 border-b border-slate-700">
      <h2 class="text-xl font-bold text-slate-100">Sign Up</h2>
    </div>
    
    <div class="p-6">
      <%= form_with(model: @user, local: true) do |f| %>
        <% if @user.errors.any? %>
          <div class="bg-rose-900/50 text-rose-200 p-4 rounded-md mb-6 border border-rose-800">
            <h4 class="font-medium mb-2">The following errors prevented signing up:</h4>
            <ul class="list-disc list-inside text-sm">
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="mb-4">
          <%= f.label :username, class: "block text-sm font-medium text-slate-300 mb-1" %>
          <%= f.text_field :username, class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-slate-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
        </div>
      
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-slate-300 mb-1" %>
          <%= f.email_field :email, class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-slate-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
        </div>
      
        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-slate-300 mb-1" %>
          <%= f.password_field :password, class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-slate-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
        </div>
      
        <div class="mb-6">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-slate-300 mb-1" %>
          <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-slate-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:border-transparent" %>
        </div>
      
        <%= f.submit "Sign Up", class: "w-full btn-primary py-2" %>
      <% end %>
    </div>
  </div>
</div>
